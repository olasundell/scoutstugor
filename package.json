{
	"name": "scoutstuga",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "bun@1.3.6",
	"engines": {
		"node": "24.x"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "mkdir -p build/data && cp data/scoutstugor.stockholm.json build/data/scoutstugor.stockholm.json",
		"build:hostinger": "BASE_PATH=/scoutstugor vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write",
		"pris:recheck": "bun scripts/pris-recheck.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/leaflet": "^1.9.21",
		"@types/luxon": "^3.7.1",
		"@types/node": "^25.0.8",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"flatpickr": "^4.6.13",
		"leaflet": "^1.9.4",
		"luxon": "^3.7.2"
	}
}
